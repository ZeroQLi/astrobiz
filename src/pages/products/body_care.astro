      <section class="grid grid-cols-2 gap-3 lg:grid-cols-4 lg:gap-8">

        <Card image="/items/body_care/dettol_pink.jpg" title="Dettol Skincare Soap" quantity="165gm x 45pcs" />

        <Card image="/items/body_care/lux_brown.jpg" title="Lux Flaw-Less Skin Lily Soap" quantity="75gm x 12sets"/>

        <Card image="/items/body_care/fa_yellow.jpg" title="Fa Soap Enriched with Yoghurt Vanilla" quantity="174gm x 4pcs" />

      </section>

      <h1 class="text-center m-5 text-5xl">Shampoo & conditioner</h1>

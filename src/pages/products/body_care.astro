---
import Layout from "../../layouts/Product_layout.astro";
import Navbar from "../../components/Navbar";
import Footer from "../../components/Footer";
import Card from "../../components/products/Card.astro";
---

<Layout
  title="Body care"
  Name="Body care | millasky general trading"
  Desc="All body care products sold by millasky genera trading"
>
  <div id="nav"></div>

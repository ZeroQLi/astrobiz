          <Card image="/items/body_care/pantene_silky.jpg" title="Pantene Pro-V Smooth & Silky Shampoo" quantity="600ml" />

          <Card image="/items/body_care/pantene_curl.jpg" title="Pantene Pro-V Perfect Curls Shampoo" quantity="600ml" />

          <Card image="/items/body_care/pantene_daily.jpg" title="Pantene Pro-V Daily Care Shampoo" quantity="600ml" />

          <Card image="/items/body_care/pantene_moisture.jpg" title="Pantene Pro-V Moisture Renewal Shampoo" quantity="600ml" />

          <Card image="/items/body_care/pantene_anti.jpg" title="Pantene Pro-V Anti-Dandruff Shampoo" quantity="600ml" />

          <Card image="/items/body_care/sunsilk_brown.jpg" title="Sunsilk Hair Fall Solution Shampoo" quantity="400ml" />

          <Card image="/items/body_care/sunsilk_black.jpg" title="Sunsilk Stunning Black Shine Shampoo" quantity="400ml" />

          <Card image="/items/body_care/sunsilk_yellow.jpg" title="Sunsilk Soft & Smooth Shampoo" quantity="400ml" />


---
export interface Props {
	title: string;
  image: string;
  quantity: string
}

const { title, image, quantity } = Astro.props;
---

<div class=" bg-orange-200 shadow-lg rounded-lg flex flex-col justify-center ">
 <img class="w-full" src=`${image}` />
 <section class="p-3">
    <div class="text-red-600 lg:text-xl">{title}</div>
    <div class="lg:text-lg">{quantity} </div>
    <div class="">MOQ: 100 cartons </div>
 </section> 
</div>
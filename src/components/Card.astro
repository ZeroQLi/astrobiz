---
export interface Props {
	title: string;
	body: string;
	href: string;
  image: string;
}

const { href, title, body, image } = Astro.props;
---

<a {href} class="shadow-2xl relative">
  <div
    class="h-full relative shadow-2xl shadow-green-900 overflow-hidden group"
  >
    <div
      class=" absolute -bottom-10 group-hover:top-0 left-0 w-full h-full group-hover:bg-green-900 group-hover:opacity-80 transition-all ease-in-out duration-500"
    >
      <div class="w-full h-full p-5 relative">
        <div
          class="bg-black bg-opacity-60 py-4 px-4 absolute bottom-0 group-hover:bottom-24 text-white text-left transition-all ease-in-out duration-500"
        >
          <h2 class=" pb-10 text-2xl font-bold text-white mb-0">
            {title}
          </h2>
          <p class="hidden lg:block text-lg font-light text-white">
            {body}
          </p>
        </div>
      </div>
    </div>
    <img
      src={image}
      class="w-full z-0 h-full object-contain"
    />
  </div>
</a>
